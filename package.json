{
  "name": "vector",
  "version": "0.1.0",
  "description": "A library for creating interactive vector graphics on the web.",
  "author": "Kurt Bruns",
  "main": "dist/lib/index.js",
  "browser": "dist/lib/index.js",
  "scripts": {
    "build": "webpack --config config/webpack.prod.js && yarn tsc",
    "build:dev": "yarn webpack --config ./config/webpack.common.js",
    "start": "webpack serve --config config/webpack.dev.js",
    "clean": "rm -rf dist/",
    "clean-install": "rm -rf node_modules/ && yarn clean && yarn",
    "deploy": "echo \"Error: no test specified\" && exit 1",
    "package": "tar --exclude=\"*.js.map\" -czvf ./dist/library.tar.gz ./dist/ ./css/library.css",
    "rollup": "rollup --config",
    "test": "jest",
    "test:update": "jest -u",
    "tsc": "tsc --declaration true --sourceMap false --skipLibCheck",
    "watch": "tsc -w",
    "website": "cd website && hugo"
  },
  "homepage": "https://vectorjs.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/vector-js/vector.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "license": "MIT",
  "dependencies": {
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@types/jest": "^26.0.16",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.0",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.0.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "^4.0.4",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.28.2",
    "rollup-plugin-typescript": "^1.0.1",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.0.3",
    "typescript": "^3.9.7",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0"
  }
}
